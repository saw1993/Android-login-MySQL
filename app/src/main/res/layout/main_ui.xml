<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"

    tools:context=".MainUI">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#D7FDD835">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"></RelativeLayout>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_height="60dp"
                android:layout_width="90dp"
                android:layout_alignParentRight="true"
                android:text="45%"
                android:textSize="40sp"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_alignParentRight="true"
                android:text="Day Target - 100,000"/>
            <TextView
                android:layout_marginTop="80dp"
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_alignParentRight="true"
                android:text="Total RD     - 1,000,000"/>
            <TextView
                android:layout_marginTop="55dp"
                android:layout_height="30dp"
                android:layout_width="300dp"
                android:layout_alignParentRight="true"
                android:text="Total sale   - 1,000,000"/>
            />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_userico" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@id/imageView"
                android:layout_marginBottom="-30dp"
                android:text="Mr Supun"
                android:textAlignment="center"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00020E"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Total RD - 1,000,000"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="#D7FDD835"
                    android:textSize="24sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Button" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>